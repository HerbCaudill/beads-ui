    "jsdom": "^27.2.0",
    "prettier": "^3.7.4",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.15"
  },
  "files": [
    "dist",
    "bin",
    "server",
    "types",
